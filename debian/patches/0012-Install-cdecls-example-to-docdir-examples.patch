Date: Mon, 23 May 2022 16:51:32 +0200
Subject: Install cdecls example to docdir/examples

---
 examples/Makefile.am | 12 ++++++++++--
 1 file changed, 10 insertions(+), 2 deletions(-)

diff --git a/examples/Makefile.am b/examples/Makefile.am
index b9184af..a414bc3 100644
--- a/examples/Makefile.am
+++ b/examples/Makefile.am
@@ -4,8 +4,16 @@
 # See the file p2x.cc for copying conditions.  
 #
 
-instbasedir=$(pkgdatadir)
-instdir= $(instbasedir)
+instbasedir=$(docdir)
+instdir= $(instbasedir)/examples
+
+install:
+	mkdir -p $(instdir)/configs
+	mkdir -p $(instdir)/in
+	mkdir -p $(instdir)/xsl
+	/usr/bin/install -c -m 644 configs/cdecls $(instdir)/configs
+	/usr/bin/install -c -m 644 in/cdecls.exp  $(instdir)/in
+	/usr/bin/install -c -m 644 xsl/cdecls.xsl $(instdir)/xsl
 
 examples = $(wildcard in/*.exp)
 
